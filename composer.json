{
  "name": "phpas2/phpas2",
  "type": "library",
  "description": "Implementation of AS2Secure for PHP 7.x and composer-based projects.  Based on code from as2secure.com.",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "keywords": [
    "as2",
    "as2secure",
    "as2securecode",
    "phpas2"
  ],
  "repositories": [
    {
      "type": "pear",
      "url": "https://pear.php.net"
    }
  ],
  "require": {
    "php": "~5.6.0|~7.0.17",
    "x59/horde-mime": "~2.9.5",
    "x59/horde-util": "~2.5.7",
    "pear-pear.php.net/Mail_mimeDecode": "~1.5.6"
  },
  "autoload": {
    "psr-4": { "PHPAS2\\PHPAS2\\": "src/" }
  },
  "bin": [ "bin/AS2Secure.jar" ],
  "scripts": {
    "post-package-install": [
      "PHPAS2\\PHPAS2\\Scripts\\PostPackageInstall::createMessageDirs",
      "PHPAS2\\PHPAS2\\Scripts\\PostPackageInstall::createLogsDir"
    ]
  }
}
